#!/bin/sh
#/etc/init.d/candybot

export PATH=$PATH:/usr/local/bin
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules

case "$1" in
  start)
  exec forever --sourceDir=/home/pi/candybot -p /home/pi/candybot/pidetcfiles -l /var/log/forever.log -o /var/log/candybot-out.log -e /var/log/candybot-err.log candybot.js 
  ;;
stop)
  exec forever stop --sourceDir=/home/pi/candybot candybot.js
  ;;
*)
  echo "Usage: /etc/init.d/candybot {start|stop}"
  exit 1
  ;;
esac

exit 0
